<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <EditText
            android:id="@+id/editExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text=""/>

        <TextView
            android:id="@+id/resultView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Результат выведется здесь"
            android:textSize="24sp"
            tools:fontFamily="casual"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TableRow
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDgt7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="7" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDgt8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="8" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDgt9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="9" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonClear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_accent"
                        android:text="CE" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDgt4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="4" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDgt5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="5" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDgt6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="6" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonMultiply"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_accent"
                        android:text="*" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDgt1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="1" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDgt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="2" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDgt3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="3" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDivide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_accent"
                        android:text="/" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="," />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDgt0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="0" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonEqual"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:text="=" />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonDifference"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_accent"
                        android:text="-" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonLeftScope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:text="("
                        android:background="@drawable/button_accent"
                        />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_default"
                        android:layout_weight="1"
                        />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonRightScope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:text=")"
                        android:background="@drawable/button_accent"
                        />

                    <Button
                        style="digitsButtons"
                        android:id="@+id/buttonSumm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="1dp"
                        android:background="@drawable/button_accent"
                        android:text="+" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>